<h1>List of all Orders</h1>
<p style="color: tomato; font-size: 16px" id="notice"><%= notice %></p>
<table>
<tr>
  <th>User</th>
  <th>Type</th>
  <th>Meat</th>
  <th>Cheese</th>
  <th>Edit?</th>
  <th>Cancel?</th>
</tr>
<% @orders.each do |order| %>
<tr>
  <td></td>
  <td><%= order.type %></td>
  <td><%= order.meat %></td>
  <td><%= order.cheese %></td>
  <td><%= link_to 'Edit', edit_order_path(order) %></td>
  <td><%= link_to 'Cancel', order, method: :delete, data: { confirm: 'Are you sure?'} %></td>
</tr>
<% end %>
</table>