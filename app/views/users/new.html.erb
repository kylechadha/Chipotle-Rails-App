<h2>Sign up to order your derricious Chipotle burrito!</h2>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Enter your name" %><br>

  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "Enter a password" %><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, placeholder: "Confirm password" %><br>
<%= f.submit "CreeEaAaAte New User" %>
<% end %>